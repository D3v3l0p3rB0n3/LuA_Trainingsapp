<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true" >
    <LinearLayout
        android:layout_gravity="top"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/helpbutton"
                android:layout_width="@dimen/help_button"
                android:layout_height="@dimen/help_button"
                android:text="@string/help"
                android:background="@drawable/button"
                android:textSize="@dimen/help" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">
            <TextView
                android:id="@id/taskheader"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/Text"
                android:textSize="25sp"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/difficulty"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/term"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/Text"
            android:textSize="25sp"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/tabelle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"></LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:gravity="center">
        <LinearLayout
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:gravity="center">
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:gravity="center">
            <Button
                android:text="BestÃ¤tigen"
                android:layout_gravity="center"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button"
                android:id="@+id/commitbutton" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:gravity="right|center"
            android:paddingRight="60dp">
            <Button
                android:id="@+id/next_task"
                android:layout_width="@dimen/buttonsize"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button"
                android:text="Weiter" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>