<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tool.gym.lua_trainingsapp">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".Activities.Splash"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".Activities.RandomTasks"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".SpecificTasks"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".Activities.TaskList"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".RelationalTask"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".HelpPopUp"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.PopUpTheme">
        </activity>
        <activity
            android:name=".WahrheitstabellenTask"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".TermVereinfachenTask"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".NormalformenTask"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>